@model IEnumerable<Services.Models.Requester>

@*@model Services.ViewModels.ServicesViewModels*@

@{
    ViewBag.Title = "Service";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Requesters</h2>

@if (Model.Count() == 0)
{
    <text>There is no requesters</text>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Requesters</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var req in Model)
            {
                <tr>
                    <td>
                         @Html.ActionLink(req.Name, "Details","Requester", new{id =req.Id},null)
                    </td>
                </tr>
            }
        </tbody>
    </table>




}